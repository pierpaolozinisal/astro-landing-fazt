---
import projects from "../../config/projects.json";
---
<h2 class="text-center font-bold text-5xl my-5">Projects</h2>
 
<div class="grid md:grid-cols-3 gap-4 p-4">
    {projects.map(project => (
    <div class="bg-slate-800 p-10 rounded-xl ">
        <h2 class="text-2xl my-4 font-bold text-center">{project.title}</h2>
        <img src={project.image} alt="" class="w-20 m-auto">
        <p class="my-2">{project.description}</p>
        <div class="text-center">
            <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 rounded-md text-center my-2">
                More Info
            </button>
        </div>
        
    </div>
        )
    )}

</div>

